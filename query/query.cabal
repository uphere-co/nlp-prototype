                        -fno-warn-unused-do-bind

  ghc-prof-options:     -auto-all
  extra-libraries:      similarity, parser, tbb, hdf5_cpp, stdc++
  c-sources:            csrc/invoke.cpp
  cc-options:           -std=c++14
  build-depends:        base,
