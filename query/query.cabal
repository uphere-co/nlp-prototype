Library
  hs-source-dirs:       lib
  Build-depends:        base,
                        --
                        binary,
                        bytestring,
                        conduit,
                        conduit-extra,
                        unix

  Exposed-modules:
                        Util.Json
                        Type
                  
  Other-modules:        

  ghc-options:          -O2 -Wall
                        -funbox-strict-fields
                        -fno-warn-unused-do-bind
                        -fno-warn-orphans

  ghc-prof-options:     -caf-all -auto-all

